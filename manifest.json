{
  "manifest_version": 3,
  "name": "TabBuffer",
  "description": "TabBuffer helps to reduce clutter, improve efficiency, and increase computer speed and performance.",
  "version": "0.0.1",
  "icons": {
      "48": "icons/blue.png",
      "128": "icons/blue.png"
  },
  "background": {
      "service_worker": "scripts.js"
  },
  "permissions": ["storage", "unlimitedStorage", "activeTab", "scripting", "tabs", "alarms", "history"],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
      "inject-script": {
        "suggested_key": "Ctrl+Shift+Y",
        "description": "Inject a script on the page"
      }
    }
}